<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserChoiceLocation">

    <Button
        android:id="@+id/NextButton"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="49dp"
        android:text="NEXT"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="368dp"
        android:layout_height="313dp"
        android:text="Please Select your Preferred Location of the Personal Shopper"
        android:textColor="@color/black"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />

    <RadioGroup
        android:id="@+id/radioGroup_location"
        android:layout_width="174dp"
        android:layout_height="205dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="191dp"
        android:layout_marginRight="191dp"
        android:layout_marginBottom="238dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_tapah"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:onClick="checkButton"
            android:text="Tapah"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb_bidor"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:onClick="checkButton"
            android:text="Bidor"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb_kampar"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:onClick="checkButton"
            android:text="Kampar"
            android:textSize="30sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>